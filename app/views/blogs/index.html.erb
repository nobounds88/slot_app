<p id="notice"><%= notice %></p>

<h1><%= "#{Blog.model_name.human}管理" %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.model_name.human %></th>
      <th><%= Blog.human_attribute_name(:title) %></th>
      <th><%= Blog.human_attribute_name(:body) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= User.find_by(id: blog.user_id).name %></td>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= link_to t(:show), blog %></td>
        <td><%= link_to t(:edit), edit_blog_path(blog) %></td>
        <td><%= link_to t(:destroy), blog, method: :delete, data: { confirm: t(:Are_you_sure?) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t(:new_blog), new_blog_path %>
