<% provide(:title, t(:sign_in)) %>
<h1><%= t :sign_in %></h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3">
    
    <div class="field">
      <%= f.label :email, class: "control-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="field">
      <%= f.label :password, class: "control-label" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    
    <div class="actions">
      <%= f.submit t(:sign_in), class: "btn btn-large btn-primary" %>
    </div>
    
    <!--<% if devise_mapping.rememberable? -%>-->
    <!--<% end -%>-->
    <!--  <%= f.check_box :remember_me, class: "checkbox-control" %>-->
    <!--  <%= f.label :remember_me, class: "form-control" %>-->

    <div class="field">
      <input type="checkbox" name="user[remember_me]" value="次回から自動的にログイン" id="checkbox_sessions" />
      <label for="checkbox_sessions" class="checkbox">次回から自動的にログイン</label>
    </div>

    <div class="actions"><%= link_to t(:sign_up_now), new_user_registration_path , class: "btn btn-lg btn-primary" %></div>
  </div>
  
<% end %>
