<% provide(:title, t(:sign_in)) %>
<h1><%= t :sign_in %></h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 offset-md-3 offset-lg-4">
    
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    
    <div class="actions">
      <%= f.submit t(:sign_in), class: "btn btn-large btn-primary" %>
    </div>
    
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    
    <div class="actions"><%= link_to t(:sign_up_now), new_user_registration_path , class: "btn btn-lg btn-primary" %></div>
  </div>
</div>
<% end %>
