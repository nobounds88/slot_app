<p id="notice"><%= notice %></p>

<h1><%= "#{Score.model_name.human}管理" %></h1>

<h2>検索条件の指定</h2>
<%= form_tag(scores_path, method: :get) do %>
  <table width="100%" >
    <tr>
      <th width ="10%" ><%= label_tag :id, "ID"  %></th>
      <td ><%= text_field_tag :id, @search_params[:id], class: 'form-control', placeholder: "IDを入力してください" %></td>
    </tr>
    <tr>
      <th ><%= label_tag :user_id, "ユーザーID"  %></th>
      <td ><%= text_field_tag :user_id, @search_params[:user_id], class: 'form-control', placeholder: "ユーザーIDを入力してください" %></td>
    </tr>
    <tr>
      <th ><%= label_tag :model, "機種名"  %></th>
      <td ><%= text_field_tag :model, @search_params[:model], class: 'form-control', placeholder: "機種名を入力してください" %></td>
    </tr>
    <tr>
      <th ><%= label_tag :play_date, "期間"  %></th>
      <td >
        <%= date_field_tag(:play_start,  @search_params[:play_start]) %>
      </td>
      <td class="text-center">
        ～
      </td>
      <td >
        <%= date_field_tag(:play_end,  @search_params[:play_end]) %>
      </td>
    </tr>
    <tr>
      <th ><%= label_tag :win_or_lose, "収支条件"  %></th>
      <td ><%= select_tag("win_or_lose", options_for_select([["未設定",0], ["勝ち",1], ["負け",2], ["引き分け",3]], @win_or_lose)) %></td>
    </tr>
  </table>
  <%= submit_tag '実行' %>
<% end %>


<h2>検索結果</h2>
<table>
  <thead>
    <tr>
      <th><%= Score.human_attribute_name(:id) %></th>
      <th><%= Score.human_attribute_name(:user_id) %></th>
      <th>Store</th>
      <th><%= Score.human_attribute_name(:model) %></th>
      <th>Seat</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Investment</th>
      <th>Proceeds</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.id %></td>
        <td><%= score.user_id %></td>
        <td><%= score.store_id %></td>
        <td><%= score.model %></td>
        <td><%= score.seat %></td>
        <td><%= score.start_at %></td>
        <td><%= score.end_at %></td>
        <td><%= score.investment %></td>
        <td><%= score.proceeds %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

