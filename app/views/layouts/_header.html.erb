<header>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" id: "logo" href=<%= root_path %>>slot app</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active"><a class="nav-link" href=<%= root_path %>><%= t(:Home) %></a></li>
            <li class="nav-item"><a class="nav-link" href=<%= help_path %>>Help<span class="sr-only">(current)</span></a></li>
            
            <% if signed_in? %>
              <li class="nav-item active"><a class="nav-link" href=<%= scores_path %>><%= Score.model_name.human %></a></li>
              <li class="nav-item active"><a class="nav-link" href=<%= stores_path %>><%= Store.model_name.human %></a></li>
              <li class="nav-item active"><a class="nav-link" href=<%= blogs_path %>><%= Blog.model_name.human %></a></li>
              <li class="nav-item active"><a class="nav-link" href=<%= new_user_session_path %>><%= t(:sign_in) %></a></li>
              <li class="nav-item active"><a class="nav-link" href=<%= users_path %>><%= t(:users) %></a></li>
              
              <li class="nav-item dropdown active">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <%= t(:account) %>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href=<%= current_user %>><%= t(:profile) %></a>
                  <a class="dropdown-item" href=<%= edit_user_registration_path %>><%= t(:settings) %></a>
                  <div class="dropdown-divider"></div>
                  <!--<a class="dropdown-item"><%#= link_to t(:sign_out), destroy_user_session_path, method: "delete" %></a>-->
                  <a class="dropdown-item" data-method="delete" href=<%= destroy_user_session_path %>><%= t(:sign_out) %></a>
                </div>
              </li>
            <% else %>
              <li class="nav-item active"><a class="nav-link" href=<%= new_user_session_path %>><%= t(:sign_in) %></a></li>
            <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
